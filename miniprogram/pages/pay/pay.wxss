page {
  background-color: #FFF9F2;
}

.pay-wrapper {
  padding: 40rpx;
}

/* 顶部金额区域卡片 */
.amount-box {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(212, 190, 175, 0.3);
  margin-bottom: 40rpx;
}

.time-tip {
  font-size: 26rpx;
  color: #A0887E;
  margin-bottom: 20rpx;
}

.price-display {
  color: #E74C3C;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.rmb { font-size: 40rpx; margin-right: 8rpx; }
.num { font-size: 80rpx; }

.order-id {
  font-size: 22rpx;
  color: #C0A89E;
}

/* 支付方式条目 */
.pay-method {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(212, 190, 175, 0.2);
  margin-bottom: 80rpx;
}

.method-label {
  font-size: 30rpx;
  color: #5C3D2E;
  font-weight: bold;
}

.method-value {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.wechat-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}
/* 渐变色微信绿支付按钮 */
.pay-btn {
  background: linear-gradient(135deg, #07C160, #06AD56);
  color: white;
  text-align: center;
  padding: 26rpx 0;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
}
/* 低调的取消按钮 */
.cancel-btn {
  text-align: center;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #A0887E; /* 灰褐色，和提示文字一样融入背景 */
  text-decoration: underline; /* 稍微带点下划线提示可点击 */
}